# Database (für spätere Verwendung)
DATABASE_URL="postgresql://username:password@localhost:5432/lwtasks"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="easy-tasks"

# Demo-Modus (für lokale Entwicklung ohne Datenbank)
DEMO_MODE=true

# File Upload (optional)
NEXT_PUBLIC_MAX_FILE_SIZE="10485760" # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/*,audio/*,.pdf,.doc,.docx"

# Email (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"